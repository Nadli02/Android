<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kevin_mueller_tjn6fckc1hw_unsplash">
    <!--Pada layout activity second diatas digunakan constraint layout agar mudah untuk memposisikan palette seperti textview dan buttondengan drag and drop.
    -->
    <!--EditText dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout isian teks "Dosen Pengampu".
    -->
    <EditText
        android:id="@+id/input_dp"
        android:layout_width="412dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Dosen Pengampu"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.602" />
    <!--EditText dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout isian teks "Program Studi".
        -->
    <EditText
        android:id="@+id/input_studi"
        android:layout_width="412dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Program Studi"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />
    <!--EditText dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout isian teks "Sifat Ujian".
        -->
    <EditText
        android:id="@+id/input_sifat"
        android:layout_width="412dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sifat Ujian"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />
    <!--EditText dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout isian teks "SKS".
            -->
    <EditText
        android:id="@+id/input_sks"
        android:layout_width="412dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="SKS"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout teks "Data Ujian".
     -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Ujian"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout teks "NIM".
        -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="416dp"
        android:layout_height="19dp"
        android:background="@color/teal_200"
        android:text="NIM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.029" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout teks "Nama Mhs".
        -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="416dp"
        android:layout_height="19dp"
        android:background="@color/design_default_color_secondary"
        android:text="Nama Mhs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />
    <!--EditText dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout isian teks "Nama Matakuliah".
                -->
    <EditText
        android:id="@+id/input_matkul"
        android:layout_width="412dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nama Matakuliah"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout teks "Kelas".
            -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="416dp"
        android:layout_height="19dp"
        android:layout_marginBottom="24dp"
        android:background="@color/teal_200"
        android:text="Kelas"
        app:layout_constraintBottom_toTopOf="@+id/input_matkul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout teks "Tanggal".
            -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />
    <!--Button dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan layout Button Pilih Tanggal Ujian.
         -->
    <Button
        android:id="@+id/tanggal"
        android:layout_width="208dp"
        android:layout_height="47dp"
        android:onClick="pick_date"
        android:text="Pilih Tanggal Ujian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.018" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout id "Tgl".
                -->
    <TextView
        android:id="@+id/tgl"
        android:layout_width="179dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/tanggal"
        app:layout_constraintTop_toBottomOf="@+id/input_sks"
        app:layout_constraintVertical_bias="0.018" />
    <!--Button dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan layout Button Submit.
             -->
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_dp"
        app:layout_constraintVertical_bias="0.048" />
    <!--Button dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan layout Button Reset.
             -->
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_dp"
        app:layout_constraintVertical_bias="0.048" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout id "hasil_nim".
                    -->
    <TextView
        android:id="@+id/hasil_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout id "hasil_nama".
                    -->
    <TextView
        android:id="@+id/hasil_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />
    <!--TextView dibawah berfungsi untuk mengatur segala hal yang berhubungan dengan Layout id "hasil_kelas".
                    -->
    <TextView
        android:id="@+id/hasil_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

</androidx.constraintlayout.widget.ConstraintLayout>